{
  "name": "hp",
  "version": "1.0.0",
  "author": "Yudai Udagawa <nimius.rd@gmail.com>",
  "dependencies": {},
  "license": "MIT",
  "scripts": {
    "test": "yarn stylelint; yarn eslint",
    "stylelint": "stylelint webpack/postcss/*",
    "eslint": "eslint webpack/js",
    "prebuild": "rimraf src/assets/",
    "build": "NODE_ENV=development webpack -d --display-modules --profile",
    "postbuild": "JEKYLL_ENV=development bundle exec jekyll build",
    "build:production": "NODE_ENV=production webpack -p",
    "postbuild:production": "JEKYLL_ENV=production bundle exec jekyll build",
    "start": "NODE_ENV=development webpack -d --progress -w & JEKYLL_ENV=development bundle exec jekyll serve -L"
  },
  "repository": {
    "url": "git@github.com:nimiusrd/hp.git",
    "type": "git"
  },
  "devDependencies": {
    "css-loader": "^0.25.0",
    "eslint": "^3.8.1",
    "extract-text-webpack-plugin": "beta",
    "postcss-apply": "^0.4.0",
    "postcss-autoreset": "^1.2.1",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.1",
    "postcss-font-smoothing": "^0.1.0",
    "postcss-initial": "^1.5.2",
    "postcss-loader": "^1.0.0",
    "postcss-media-minmax": "^2.1.2",
    "postcss-nesting": "^2.3.1",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "stylelint": "^7.5.0",
    "webpack": "beta"
  }
}
